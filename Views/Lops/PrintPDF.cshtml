@model List<QLSV.Models.Lop>
<style>
    thead {
        background-color: #00FF00;
        color: black
    }

    table {
        width: 100%;
        border: 1px solid black;
        font-size: 50px;
        margin-left: auto;
        margin-right: auto;
    }

    td, th {
        padding: 5px;
        font-size: 14px;
    }
</style>
<table class="table table-bordered table-striped" border="1" style="border-color:black">
    <thead>
        <tr>
            <th>Mã lớp</th>
            <th>Tên lớp</th>
            <th>Tên ngành</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaLop</td>
                <td>@item.TenLop</td>
                <td>@item.Nganh.TenNganh</td>
            </tr>

        }
    </tbody>
</table>


