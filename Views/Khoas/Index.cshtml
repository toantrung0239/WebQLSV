@model PagedList.IPagedList<QLSV.Models.Khoa>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutQLSV.cshtml";
}
<link href="~/Content/using.css" rel="stylesheet">
<link href="~/Content/phantrang.css" rel="stylesheet">
<style>
    .fi {
        border: 1px solid rgba(27, 31, 35, .15);
        border-radius: 6px;
        box-shadow: rgba(27, 31, 35, .1) 0 1px 0;
        box-sizing: border-box;
        color: black;
        cursor: pointer;
        display: inline-block;
        font-family: -apple-system, system-ui, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji";
        font-size: 14px;
        font-weight: 600;
        line-height: 20px;
        padding: 14px 16px;
        position: relative;
        text-align: center;
        text-decoration: none;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        vertical-align: middle;
        white-space: nowrap;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .timkhoa {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .tim-1 {
        margin: 0 10px;
        width: 30%;
    }

    .text-end {
        display: flex;
        align-items: center;
    }

    .form-wrapper {
        display: flex;
        justify-content: space-between;
    }

    .nutbam {
        margin: 0 10px;
    }

    .new {
        display: flex;
        align-items: center;
    }

    .antuong-content {
        display: flex;
        align-items: center;
        justify-content: space-evenly;
    }

    .text-end-1 .thep {
        margin: 0 10px;
    }

    .thep p {
        position: relative;
    }

    .nutbam--1 {
        background-color: #37497e;
    }

    .xuatfile {
        border-radius: 10px;
        background-color: #fff;
        padding: 10px 16px;
        text-align: center;
        box-shadow: rgba(27, 31, 35, .1) 0 1px 0;
        display: flex;
        align-items: center;
        box-sizing: border-box;
        justify-content: center;
    }

    .header-content {
        display: flex;
        align-items: center;
    }

    .nut-xuat-file {
        float: right;
    }
</style>

<div class="card">

    <div class="card-header mb-3">

        <div class="form-wrapper">
            <div class="header-content">
                <strong style="font-size:30px;" class="text-uppercase">Danh sách khoa</strong>
            </div>
        </div>

    </div>
    <div class="timkhoa mb-0">
        <div class="tim-1">
            <input type="text" class="form-control" id="searchkhoa" placeholder="Nhập tên khoa để tìm kiếm" />
        </div>
    </div>


    <div class="card-body p-3">
        <table class="table table-bordered table-hover" id="result">
            <thead>
                <tr>

                    <th class="text-center">Mã khoa</th>
                    <th class="text-center">Tên khoa</th>
                    <th class="text-center">Địa chỉ</th>
                    <th class="text-center">Số điện thoại</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="@item.MaKhoa">

                        <td>@item.MaKhoa</td>
                        <td>@item.TenKhoa</td>
                        <td>@item.DiaChi</td>
                        <td>@item.SDT</td>
                    </tr>
                }
            </tbody>
        </table>
        <h5 id="view-bag">Số lượng khoa là: @ViewBag.SoLuong</h5>
        <table class="table table-bordered table-hover table-a" id="search-result" style="display:none">
            <thead>
                <tr align='center'>
                    <th class="text-center">Mã khoa</th>
                    <th class="text-center">Tên khoa</th>
                    <th class="text-center">Số điện thoại</th>
                    <th class="text-center">Địa chỉ</th>
                </tr>
            </thead>
            <tbody id="main-data">
            </tbody>
        </table>

    </div>
</div>
<a href="@Url.Action("Index", "Khoas")">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</a>
<script type="text/javascript">
    $(document).ready(function () {
        var inputElement = document.querySelector("#searchkhoa");
console.log(inputElement);
        inputElement.oninput = function (e) {
            console.log(e.target.value);
            search(e.target.value);
        }
    });
    function search(keyword) {
        $.ajax({
             url: '@Url.Action("Getdata1", "Khoas")',
            type: 'get',
            data: {
                id: keyword,
            },
            success: function (data) {
               var q = JSON.parse(data)
                var htmldata = create(q)
                if (keyword) {
                    $("#result").css("display", "none");
                    $("#search-result").css("display", "table");
                    $("#view-bag").css("display", "none");
                    $("#thea").css("display", "none");
                    $("#main-data").html(htmldata);
                    $(".pagination").css("display", "none");
                } else {
                    $("#result").css("display", "table");
                    $("#search-result").css("display", "none");
                    $(".pagination").css("display", "flex");
                    $("#view-bag").css("display", "flex");
                }
            }
            });
    }
    function create(data) {
        let rows = [];

        console.log(data);
        for (var i = 0; i < data.length; i++)
        {
           let row = `<tr id="${data[i]["MaKhoa"]}" class="dbname">
        <td> ${data[i]["MaKhoa"]} </td>
        <td>${data[i]["TenKhoa"]}</td>
        <td>${data[i]["DiaChi"]}</td>
        <td>${data[i]["SDT"]}</td>
        </tr>`;

            if (data[i]["MaKhoa"]) {
                rows.push(row);
            }
        }
        return rows;
    }
</script>






