@model IEnumerable<QLSV.Models.DangNhap>

@{
    Layout = null;
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<link href="~/Content/using.css" rel="stylesheet">
<style>

    body {
        height: 100vh;
        background-color: #eee;
    }

    main {
        width: 100%;
        height: 100%;
    }

    form {
        border-radius: 5px;
        box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.1);
        background-color: white;
        padding: 20px 50px;
    }

    .form-check {
        margin-left: 40px;
    }

    * {
        font-family: Cambria;
    }

    .form-wrapper {
        width: 100%;
        height: 100%;
        margin-top: 100px;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: absolute;
        z-index: 3;
    }

    .ghi-nho {
        display: flex;
        align-items: center;
    }

    .nutbam--2 {
        background-color: #37497e;
        width: 80%;
    }

    .form-control {
        width: 80%;
        margin: auto;
    }
</style>
<main>
    <div class="form-wrapper">

        <form method="post">
            <div class="d-flex justify-content-center mb-4">
                <img src="https://qnu.edu.vn/Resources/Images/0logoDHQNnew.jpg" style="height:120px; width:120px;">
            </div>
            <div class="d-flex justify-content-center" style="color: #00568F; width:100%;">
                <h5>TRƯỜNG ĐẠI HỌC QUY NHƠN</h5>
            </div>
            <div class="d-flex justify-content-center">
                <p>Cổng thông tin sinh viên</p>
            </div>
            <div class=" mb-4 d-flex justify-content-center">
                <p>_______________ _*_ _______________</p>
            </div>


            <div class="mb-4">
                <input class="form-control" ID="txtUserName" name="TenDN" placeholder="Tên đăng nhập" />

            </div>
            <div class="mb-2">
                <input class="form-control" ID="txtPass" type="password" name="MatKhau" placeholder="Mật khẩu" />

            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Ghi nhớ đăng nhập
                </label>
            </div>
            <p style="color:red">@ViewBag.thongbao</p>
            <div class="mb-4 d-flex justify-content-center nut-bam">
                <button ID="btnLogin" class="nutbam nutbam--2">Đăng nhập</button>
            </div>
        </form>
    </div>
</main>