<script type="text/javascript">
    $(document).on('click', '#sua', function () {
        var trid = $(this).closest('tr').attr('id');
        console.log(trid);
        getdiem(trid);
        $("#kiemtra").val(trid);
        $("#txtMaSV").attr('readonly', true);
    });
    function getdiem(Id) {
        $.ajax({
            url: "@Url.Action("Getdata1", "Diems")",
            type: "get",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            data: {
                id: Id  
            },
            success: function (data) {
                var q = jQuery.parseJSON(data); 
                console.log(q);
                $('#txtId').val(q[0]['Id']);
                $('#txtMaSV').val(q[0]['MaSV']);
                $('#txtNH').val(q[0]['NamHoc']);
                $('#kiemtra1').val(q[0]['MaMH']);
                $('#txtHK').val(q[0]['HocKy']);
                $('#txtCC').val(q[0]['DiemCC']);
                $('#txtGK').val(q[0]['DiemGK']);
                $('#txtCK').val(q[0]['DiemCK']);
                var kt = $('#kiemtra1').val();
                LoadDropMH(kt);
            }
        });
    }
    function LoadDropMH(a) {
        $.ajax({
            url: "@Url.Action("Getdata2", "Diems")",
            type: "get", 
            dataType: "json",
            success: function (data) {
                var obj = JSON.parse(data);
                console.log(obj);
                $("#select").empty();
                if (a == "") {
                    for (var i = 0; i < obj.length; i++) {
                        let mamonhoc = obj[i]["MaMH"];
                        $("#select").append("<option value=" + mamonhoc + " >"
                            + obj[i]["TenMH"] + "</option>");
                    }
                } else {
                    for (var i = 0; i < obj.length; i++) {
                        let mamonhoc = obj[i]["MaMH"];
                        if (a == mamonhoc) {
                            $("#select").append("<option value=" + mamonhoc + " selected='selected'>"
                                + obj[i]["TenMH"] + "</option>");
                        } else {
                            $("#select").append("<option value=" + mamonhoc + ">"
                                + obj[i]["TenMH"] + "</option>");
                        }
                    }
                }
            }
        });
    }
    $(document).on('click', '#them', function () {
        $('#txtMaSV').attr("readonly", false);
        $('#txtMaSV').val('');
        $('#txtNH').val('');
        $('#txtHK').val('');
        $('#txtCC').val('');
        $('#txtGK').val('');
        $('#txtCK').val('');
        $('#kiemtra').val('');
        var a = $('#kiemtra1').val();
        LoadDropMH(a);
    });
    $(document).on('click', '#btnSubmit', function () {
        let Id = $('#txtId').val();
        let makhoakiemtra = $('#kiemtra').val();
        let masv=$('#txtMaSV').val();
        let namhoc=$('#txtNH').val();
        let hocky=$('#txtHK').val();
        let chuyencan=$('#txtCC').val();
        let giuaky=$('#txtGK').val();
        let cuoiky=$('#txtCK').val();
        $('#kiemtra').val();
        let mamonhoc = $('#select').val();
        console.log("id là", makhoakiemtra);
        console.log();
        if (masv.length == 0 || mamonhoc.length == 0) {
            alert("Vui lòng nhập đầy đủ thông tin");
            return;
        }
        if (makhoakiemtra.length == 0) {
            $.ajax({
                url: '@Url.Action("AddData", "Diems")',
                type: 'post',
                data: {
                    msv: masv,
                    mh: mamonhoc,
                    nh: namhoc,
                    hk: hocky,
                    cc: chuyencan,
                    gk: giuaky,
                    ck: cuoiky,
                },
                success: function (data) {
                    alert(data);
                    location.reload();
                }
            });
        }
        else {
            $.ajax({
                url: '@Url.Action("EditData", "Diems")',
                type: 'post',
                data: {
                    id: Id,
                    msv: masv,
                    mh: mamonhoc,
                    nh: namhoc,
                    hk: hocky,
                    cc: chuyencan,
                    gk: giuaky,
                    ck: cuoiky,
                },
                success: function (data) {
                    alert(data);
                    location.reload();
                }
            });
        }
    });
       function deletedata(id){
           console.log(id)
        a = confirm('Bạn có muốn xóa điểm sinh viên này?')
           if (!a) {
            return;
        }
           $.ajax({
              url: '@Url.Action("Delete", "Diems")',
              type: 'post',
              data: {
                    Id: id,
                },
              success: function (data) {
                    alert(data);
                    location.reload();
                }
            });
    }

</script>
